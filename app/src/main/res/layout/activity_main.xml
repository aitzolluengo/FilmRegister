<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/background_color"> <!-- Puedes cambiar el color de fondo -->

    <!-- Botón para enviar notificación -->
    <Button
        android:id="@+id/btn_send_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_notification"
        android:padding="10dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <!-- Botón para ver Watchlist -->
    <Button
        android:id="@+id/btn_watchlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Watchlist"
        android:padding="10dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <!-- Botón para ver historial -->
    <Button
        android:id="@+id/btn_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Historial"
        android:padding="10dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <!-- Botón para buscar película -->
    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Película"/>

</LinearLayout>
